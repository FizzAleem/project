<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<div class="carousel" data-flickity='{ "wrapAround": true }'>


<% @product.images.each do |image| %>

  <%= image_tag url_for(image), class: 'carousel-cell' %>

<% end %>


</div>

<%# <%= link_to 'Edit', edit_product_path(@product) %>
<%# <%= link_to 'Back', products_path %>
<h2 class="py-5 mt-5">Comments</h2>
<% @product.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
  <hr>
<% end %>

<h2>Add a comment:</h2>
<%= form_with model: [ @product, @product.comments.build ] do |form| %>
   <div class="form-group">
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter ,class: "form-control"%>
  </div>
   <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body ,class: "form-control"%>
  </div>
  <div class="actions">
    <%= form.submit "Post", class: "btn btn-lg btn-success" %>
  </div>
<% end %>
