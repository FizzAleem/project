<h1 class="h3">Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= product.description %></td>
        <td>
        <%= link_to product do%>
        <span>
            <i data-feather="info"></i>
          </span>
        <% end %>
        </td>
        <td>
        <%= link_to edit_product_path(product) do %>
         <span>
            <i data-feather="edit"></i>
          </span>
        <% end %>
        </td>
        <td>
        <%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span>
            <i data-feather="trash-2" ></i>
          </span>
        <% end %>
        </td>
        <td>
          <%= link_to order_items_path, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <span>
            <i data-feather="shopping-cart" ></i>
          </span>
        <% end %>
